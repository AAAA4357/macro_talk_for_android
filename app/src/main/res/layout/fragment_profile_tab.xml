<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileTab">
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="98dp"/>

    <TextView
        android:id="@+id/profile_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_profile_empty"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/profile_list"
        app:layout_constraintEnd_toEndOf="@id/profile_list"
        app:layout_constraintStart_toStartOf="@id/profile_list"
        app:layout_constraintTop_toTopOf="@id/profile_list" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_addprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/momotalk_darkcyan"
        app:layout_constraintBottom_toBottomOf="@id/profile_list"
        app:layout_constraintEnd_toEndOf="@id/profile_list" />

</androidx.constraintlayout.widget.ConstraintLayout>